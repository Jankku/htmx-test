<div>
    <h1>Chat</h1>
    <form id="form" hx-ext="ws" ws-connect="/ws" ws-send hx-on:htmx:ws-after-message="this.reset()">
        <label for="name">Name</label>
        <input id="name" name="name" required>

        <label for="message">Message</label>
        <input  id="message" name="message" required hx-on::ws-after-message="this.val('')">
        <button>Send</button>
    </form>
    {{>messagelist}}
</div>